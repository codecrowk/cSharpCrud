@model Employ
@{
  ViewData["Title"] = "Job details";
}

<div class="d-flex flex-column justify-content-center text-center">
  <div>
    <img src="~/images/@Model.ProfilePicture" alt="@Model.ProfilePicture" class="w-25"> 
  </div>
  <h3>@Model.Names @Model.LastNames</h3>
  <p>@Model.Email</p>
</div>

<div class="row justify-content-center">
  <div class="col-4">
    <p>Phone number: @Model.Phone</p>
  </div>

  <div class="col-4">
    <p>Address: @Model.Address</p>
  </div>

  <div class="col-4">
    <p>BirthDay: @Model.BirthDate</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-4">
    <p>Gender: @Model.Gender</p>
  </div>

  <div class="col-4">
    <p>Marital Status: @Model.CivilStatus</p>
  </div>

  <div class="col-4">
    <p>Dream salary: @Model.Salary</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-4">
    <p>Academic title: @Model.AcademicTitle</p>
  </div>

  <div class="col-4">
    <p>Languages: @Model.Languages</p>
  </div>

  <div class="col-4">
    <p>Area: @Model.Area</p>
  </div>
</div>

<div>
  <b class="fs-3">About</b>
  <p>@Model.About</p>
</div>

  <a href="~/documents/@Model.Cv" download="@Model.Cv" class="btn btn-primary">Download CV</a>
  <a href="~/images/@Model.ProfilePicture" download="@Model.Cv" class="btn btn-success">Download Image</a>