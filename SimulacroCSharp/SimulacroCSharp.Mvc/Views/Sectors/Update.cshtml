@* You cannot obviate model reference *@
@model Sector

<h1>Update company</h1>
<form asp-action="Update" asp-route-id="@Model.Id" method="post">

  <div class="mb-3">
    <div class="form-group">
        <label for="">Name:</label>
        <input asp-for="Name" class="form-control" value="@Model.Name">
    </div>

    <div class="form-group">
        <label for="">Description:</label>
        <input asp-for="Description" class="form-control" value="@Model.Description">
    </div>

    <div class="form-group">
        <label for="">Author:</label>
        <input asp-for="Author" class="form-control" value="@Model.Author">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>