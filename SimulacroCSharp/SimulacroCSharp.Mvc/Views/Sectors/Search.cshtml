@{
  string[] tableHeaders = {"ID", "Name", "Description", "Author", "Options"};
}

<h2>Search result</h2>

<table class="table table-striped">
  <thead>
    <tr>
      @foreach (var header in tableHeaders)
      {
        <th scope="col">@header</th>
      }
    </tr>
  </thead>

  <tbody>
    @foreach (var Sector in Model)
    {
      <tr>
        <td>@Sector.Id</td>
        <td>@Sector.Name</td>
        <td>@Sector.Description</td>
        <td>@Sector.Author</td>
        <td class="d-flex">
          <a asp-action="Detail" asp-route-id="@Sector.Id" class="btn btn-secondary">Details</a>
          <a asp-action="Update" asp-route-id="@Sector.Id" class="btn btn-primary">Update</a>
          <a asp-action="Delete" asp-route-id="@Sector.Id" class="btn btn-danger">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
</table>